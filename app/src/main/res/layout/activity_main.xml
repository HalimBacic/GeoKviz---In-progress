<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorDay"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/newGameBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:text="@string/newQuiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:text="@string/results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGameBtn"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resBtn"
        app:layout_constraintVertical_bias="0.582" />

    <ImageButton
        android:id="@+id/settingBtn"
        style="@style/generalImage"
        android:src="@mipmap/ic_settings_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userNameField"
        android:layout_width="313dp"
        android:layout_height="60dp"
        android:hint="@string/inputUser"
        android:textColorHint="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/newGameBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.692">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/unField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/newsBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:text="@string/news"
        app:layout_constraintBottom_toTopOf="@+id/exitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resBtn"
        app:layout_constraintVertical_bias="0.54" />

</androidx.constraintlayout.widget.ConstraintLayout>