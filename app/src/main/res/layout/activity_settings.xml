<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/primaryDarkColorDay">

    <Button
        android:id="@+id/qnumBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:layout_marginTop="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:layout_marginTop="32dp"
        android:background="@color/secondaryColorDay"
        android:gravity="center"
        android:text="@string/cacheMode"
        android:textColor="@color/primaryTextColorDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srBtn"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_back_round"
        style="@style/generalImage"/>

    <Button
        android:id="@+id/engBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:layout_marginTop="40dp"
        android:text="@string/lang_en"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qnumBtn" />

    <Button
        android:id="@+id/srBtn"
        android:layout_width="@dimen/generalButtonWidth"
        android:layout_height="@dimen/generalButtonHeight"
        android:layout_marginTop="36dp"
        android:text="@string/lang_sr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/engBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>