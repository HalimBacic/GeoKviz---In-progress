<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoKviz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDay</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDay</item>
        <item name="colorOnPrimary">@color/primaryTextColorDay</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorDay</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorDay</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/primaryColorDay</item>
        <item name="materialButtonStyle">@style/GeneralButton</item>
    </style>

    <style name="Theme.GeoKvizWithBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDay</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDay</item>
        <item name="colorOnPrimary">@color/primaryTextColorDay</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorDay</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorDay</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/primaryColorDay</item>
        <item name="materialButtonStyle">@style/GeneralButton</item>
        <item name="actionBarStyle">@style/AppToolbar</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/primaryDarkColorDay</item>
        <item name="android:textColor">@color/primaryTextColorDay</item>
    </style>

    <style name="GeneralButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondaryColorDay</item>
        <item name="android:padding">@dimen/generalBtnPadding</item>
        <item name="android:textColor">@color/secondaryTextColorDay</item>
        <item name="cornerRadius">@dimen/btnCorner</item>
        <item name="strokeWidth">@dimen/stroke</item>
        <item name="strokeColor">@color/secondaryDarkColorDay</item>
        <item name="android:layout_height">@dimen/generalButtonHeight</item>
        <item name="android:layout_width">@dimen/generalButtonWidth</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="generalImage" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/secondaryColorDay</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="questionTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/primaryDarkColorDay</item>
        <item name="android:textColor">@color/secondaryTextColorDay</item>
        <item name="android:padding">@dimen/generalBtnPadding</item>
        <item name="android:textSize">@dimen/textSizeOne</item>
    </style>

    <style name="answerTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/primaryDarkColorDay</item>
        <item name="android:textColor">@color/secondaryTextColorDay</item>
        <item name="android:padding">@dimen/generalBtnPaddingSmall</item>
        <item name="android:textSize">@dimen/textSizeTwo</item>
    </style>

    <style name="letterTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/primaryDarkColorDay</item>
        <item name="android:textColor">@color/secondaryTextColorDay</item>
        <item name="android:textSize">@dimen/textSizeLetter</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="labelText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primaryTextColorDay</item>
        <item name="android:gravity">center</item>
    </style>

</resources>