<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoKviz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/primaryColor2</item>
        <item name="materialButtonStyle">@style/GeneralButton</item>
    </style>

    <style name="GeneralButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondaryColor2</item>
        <item name="android:padding">@dimen/generalBtnPadding</item>
        <item name="android:textColor">@color/secondaryTextColor2</item>
        <item name="cornerRadius">@dimen/btnCorner</item>
        <item name="strokeWidth">@dimen/stroke</item>
        <item name="strokeColor">@color/secondaryTextColor2</item>
        <item name="android:layout_height">@dimen/generalButtonHeight</item>
        <item name="android:layout_width">@dimen/generalButtonWidth</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="generalImage" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/secondaryColor2</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>